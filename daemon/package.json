{
  "name": "claude-companion-daemon",
  "version": "1.0.0",
  "description": "Server daemon for Claude Companion - watches Claude Code sessions and serves data to mobile app",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "pkg": "pkg dist/index.js --targets node18-linux-x64 --output daemon-linux-x64"
  },
  "dependencies": {
    "bonjour-service": "^1.2.1",
    "chokidar": "^3.6.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
