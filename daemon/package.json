{
  "name": "@hexidecibel/companion",
  "version": "0.1.1",
  "description": "Server daemon for Companion - watches coding sessions and serves data to mobile app",
  "main": "dist/index.js",
  "bin": {
    "companion": "dist/index.js"
  },
  "files": [
    "dist",
    "bin",
    "scripts",
    "web",
    "README.md"
  ],
  "keywords": [
    "companion",
    "coding-assistant",
    "tmux",
    "daemon",
    "mobile",
    "websocket"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Hexidecibel/companion.git",
    "directory": "daemon"
  },
  "author": "Hexidecibel",
  "license": "MIT",
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "pkg": "pkg dist/index.js --targets node18-linux-x64 --output daemon-linux-x64",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "bonjour-service": "^1.2.1",
    "chokidar": "^3.6.0",
    "firebase-admin": "^13.6.0",
    "qrcode": "^1.5.4",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/qrcode": "^1.5.6",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
